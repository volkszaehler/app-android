<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.volkszaehler.volkszaehlerapp"
    android:installLocation="auto"
    android:versionCode="97"
    android:versionName="0.9.7">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Preferences"
            android:label="@string/app_name" />
        <activity
            android:name=".ChannelDetails"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ChartDetails"
            android:label="@string/app_name"
            android:noHistory="true">
        </activity>
        <activity android:name="org.achartengine.GraphicalActivity"/>
        <activity
            android:name=".DateTimeSelector"
            android:label="@string/SelectDateAndTime"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Dialog">
        </activity>
        <activity
            android:name=".TableDetails"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".DateSelector"
            android:label="@string/SelectDate"
            android:theme="@android:style/Theme.Holo.Dialog">
        </activity>
    </application>
</manifest>
